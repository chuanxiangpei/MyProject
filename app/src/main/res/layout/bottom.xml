<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="60dp"
    android:layout_gravity="bottom"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ImageView
        android:id="@+id/bottom_1_home"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:src="@drawable/bottom_1" />

    <ImageView
        android:id="@+id/bottom_1_dynamic"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:src="@drawable/bottom_2" />

    <ImageView
        android:id="@+id/bottom_1_activity"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:src="@drawable/bottom_3" />

    <ImageView
        android:id="@+id/bottom_1_xiaoxi"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:src="@drawable/bottom_4" />

    <ImageView
        android:id="@+id/bottom_1_mine"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:src="@drawable/bottom_5" />


</LinearLayout>